<Window x:Class="ProjectGameInteraction.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectGameInteraction"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800">
    <Canvas Name="GameCanvas" Focusable="True" KeyDown="IsKeyDown" KeyUp="IsKeyUp" Background="LightBlue">

        <Rectangle Name="Player" Fill="Red" Width="40" Height="60" Canvas.Left="40" Canvas.Top="350"/>

        <Rectangle Name="Ground" Fill="Green" Width="800" Height="40" Canvas.Left="0" Canvas.Top="410"/>

    </Canvas>
</Window>
