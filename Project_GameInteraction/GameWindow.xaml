<Window x:Class="GameTimerExample.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameTimerExample"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800"
        Closing="Window_Closing">
    <Canvas KeyDown="OnKeyDown" KeyUp="OnKeyUp" x:Name="GameCanvas" Focusable="True">
        <Rectangle x:Name="Player"
                   Fill="Red"
                   Height="100"
                   Width="50"
                   Canvas.Left="50"
                   Canvas.Bottom="300"/>
        <Rectangle x:Name="Ground"
                   Fill="Green"
                   Height="10"
                   Width="800"
                   Canvas.Left="0"
                   Canvas.Bottom="50"/>
        <Rectangle Fill="Brown"
                   Height="50"
                   Width="800"
                   Canvas.Bottom="0"/>
    </Canvas>
</Window>
